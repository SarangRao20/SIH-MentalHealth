      "title": "Box Breathing",
      "category": "stress",
      "type": "immediate",
      "steps": [
        "Breathe in for 4 counts",
        "Hold for 4 counts",
        "Breathe out for 4 counts", 
        "Hold for 4 counts",
        "Repeat 4-8 times"
      ],
      "when_to_use": "Stress, anxiety, before exams",
      "duration": "2-5 minutes"
    },
    {
      "id": 3,
      "title": "Progressive Muscle Relaxation",
      "category": "stress",
      "type": "extended",
      "steps": [
        "Start with your toes, tense for 5 seconds",
        "Release and notice the relaxation",
        "Move up to calves, thighs, etc.",
        "Work through each muscle group",
        "End with deep breathing"
      ],
      "when_to_use": "Before sleep, general tension",
      "duration": "10-20 minutes"
